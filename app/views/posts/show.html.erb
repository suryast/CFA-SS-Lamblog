<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.email %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
<%= render_shareable :turbolinks => true,:buttons=> ['twitter'] %>
<%= render 'comments/form', comment: @comment %>

<% @comments.each do |comment| %>
  <p><%= comment.user.email %> - <%= comment.created_at %></p>
  <p><%= comment.context %></p>
<% end %>
